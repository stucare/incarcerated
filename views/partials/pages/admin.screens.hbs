            <i class="fas fa-pause fa-fw"></i>
        </button>

        <button type="button" id="GameEnd" class="btn btn-primary mx-2">
            <i class="fas fa-trophy fa-fw"></i>
        </button>

        <button type="button" id="GameReset" class="btn btn-info mx-2">
            <i class="fas fa-undo-alt fa-fw"></i>
        </button>
</div>

